{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",

  "configurations": {
    "Python: Launch": {
      "adapter": "debugpy",
      "breakpoints": {
        "exception": {
          "caught": "Y",
          "uncaught": "Y"
        }
      },
      "configuration": {
        "program": "${file}",
        "python": "${workspaceRoot}/.venv/bin/python",
        "cwd": "${workspaceRoot}",
        "type": "python",
        "request": "launch"
      }
    }
  }
}
